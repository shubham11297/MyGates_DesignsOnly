<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="lightred_boundary_no_fill_button">
        <item name="android:textSize">@dimen/spec_text</item>
        <item name="android:textColor">@color/light_red</item>
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:background">@drawable/button_background_nofill_lightred_rounded</item>
        <item name="android:paddingLeft">45dp</item>
        <item name="android:paddingRight">45dp</item>
    </style>
    <style name="lightred_boundary_no_fill_button_small">
        <item name="android:textSize">@dimen/spec_text</item>
        <item name="android:textColor">@color/light_red</item>
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:background">@drawable/background_nofill_lightred_rounded</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="slategrey_boundary_no_fill_button">
        <item name="android:textSize">@dimen/spec_text</item>
        <item name="android:textColor">@color/charcoal_grey_80</item>
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:background">@drawable/button_back_nofill_slategrey_rounded</item>
        <item name="android:paddingLeft">45dp</item>
        <item name="android:paddingRight">45dp</item>
    </style>

    <style name="gradient_fill_button">
        <item name="android:textSize">@dimen/spec_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:background">@drawable/button_background_gradient_rounded</item>
        <item name="android:paddingLeft">45dp</item>
        <item name="android:paddingRight">45dp</item>
    </style>

    <style name="MGWhiteSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
