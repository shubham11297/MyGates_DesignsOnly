<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="lightred_boundary_no_fill_button">
        <item name="android:textSize">@dimen/spec_text</item>
        <item name="android:textColor">@color/light_red</item>
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:background">@drawable/button_background_nofill_lightred_rounded</item>
        <item name="android:paddingLeft">45dp</item>
        <item name="android:paddingRight">45dp</item>
    </style>
    <style name="lightred_boundary_no_fill_button_small">
        <item name="android:textSize">@dimen/spec_text</item>
        <item name="android:textColor">@color/light_red</item>
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:background">@drawable/background_nofill_lightred_rounded</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="slategrey_boundary_no_fill_button">
        <item name="android:textSize">@dimen/spec_text</item>
        <item name="android:textColor">@color/charcoal_grey_80</item>
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:background">@drawable/button_back_nofill_slategrey_rounded</item>
        <item name="android:paddingLeft">45dp</item>
        <item name="android:paddingRight">45dp</item>
    </style>

    <style name="gradient_fill_button">
        <item name="android:textSize">@dimen/spec_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:background">@drawable/button_background_gradient_rounded</item>
        <item name="android:paddingLeft">45dp</item>
        <item name="android:paddingRight">45dp</item>
    </style>

    <style name="MGWhiteSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RatingBarCustomYellow">
        <item name="android:maxWidth">36dp</item>
        <item name="android:maxHeight">36dp</item>
        <item name="android:tint">@color/charcoal_grey_30</item>
        <item name="android:minWidth">36dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:thumb">@null</item>
        <item name="android:progressTint">@color/ratingNormal</item>
        <item name="android:secondaryProgressTint">@color/ratingNormal</item>
        <item name="colorControlActivated">@color/ratingNormal</item>
        <item name="colorControlNormal">@color/charcoal_grey_30</item>
    </style>
    <style name="RatingBarMedium">
        <item name="android:textColor">@color/ratingNormal</item>
        <item name="android:tint">@color/ratingNormal</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:thumb">@null</item>
        <item name="android:isIndicator">true</item>
        <item name="android:progressTint">@color/ratingNormal</item>
        <item name="android:secondaryProgressTint">@color/ratingNormal</item>
        <item name="colorControlActivated">@color/ratingNormal</item>
        <item name="colorControlNormal">@color/ratingNormal</item>
    </style>

    <style name="PrimaryFlatButton">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:colorControlNormal">@color/coral_two_30</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorControlNormal">@color/coral_two_30</item>
    </style>

    <style name="ThemeGrey">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="checkBoxStyle">
        <item name="android:textColorSecondary">@color/charcoal_grey_70</item>
        <item name="colorAccent">@color/light_red</item>
        <item name="colorControlNormal">@color/charcoal_grey_70</item>
    </style>

    <style name="grey_fill_button">
        <item name="android:textSize">@dimen/spec_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:background">@drawable/button_background_grey_fill_radius30</item>
        <item name="android:paddingLeft">45dp</item>
        <item name="android:paddingRight">45dp</item>
    </style>

    <style name="button_bottom_gradient_fill">
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:background">@drawable/left_to_right_reddish_gradient</item>
    </style>

    <style name="MGEditTextBottomRed">
        <item name="android:textColor">@color/light_red</item>
        <item name="android:textColorHint">@color/charcoal_grey_30</item>
        <item name="colorAccent">@color/light_red</item>
        <item name="colorButtonNormal">@color/light_red</item>
        <item name="colorControlActivated">@color/light_red</item>
        <item name="colorControlHighlight">@color/light_red</item>
        <item name="colorControlNormal">@color/light_red</item>
    </style>

    <style name="MGEditTextBottomRedTextGrey">
        <item name="android:textColor">@color/charcoal_grey</item>
        <item name="android:textColorHint">@color/charcoal_grey_30</item>
        <item name="colorAccent">@color/light_red</item>
        <item name="colorButtonNormal">@color/light_red</item>
        <item name="colorControlActivated">@color/light_red</item>
        <item name="colorControlHighlight">@color/light_red</item>
        <item name="colorControlNormal">@color/light_red</item>
    </style>

</resources>
