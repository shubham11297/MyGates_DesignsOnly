<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/header_layout3" android:layout_width="match_parent" android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView android:textSize="@dimen/spec_heading" android:textColor="@color/white" android:gravity="center" android:id="@+id/header_confirm_vehicle" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/confirm_vehicle"/>
            <androidx.appcompat.widget.AppCompatImageView android:id="@+id/closeDialog3" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="8dp" app:srcCompat="0x7f08018a"/>
        </RelativeLayout>
        <RelativeLayout android:background="@drawable/dialog_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/header_layout3">
            <RelativeLayout android:id="@+id/detail" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.mygate.user.common.p011ui.CircularImageView android:id="@+id/imgType" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="20dp" android:layout_marginRight="15dp" android:layout_marginBottom="8dp" android:layout_below="@+id/lockText" android:layout_centerHorizontal="true"/>
                <androidx.appcompat.widget.AppCompatTextView android:textSize="@dimen/spec_text" android:textColor="@color/charcoal_grey" android:id="@+id/nickName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginBottom="12dp" android:text="My Car" android:layout_below="@+id/vehNum" android:layout_centerHorizontal="true" android:lineSpacingExtra="0.9dp"/>
                <androidx.appcompat.widget.AppCompatTextView android:textSize="@dimen/textSize_18" android:textColor="@color/charcoal_grey" android:id="@+id/vehNum" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/smallPadding" android:text="KA 4S 1234" android:layout_below="@+id/imgType" android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <androidx.appcompat.widget.AppCompatTextView android:textSize="@dimen/textSize_15" android:textColor="@color/charcoal_grey_80" android:gravity="center" android:id="@+id/text1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:text="@string/add_vehicle_confirmation" android:layout_below="@+id/detail"/>
            <androidx.appcompat.widget.AppCompatTextView android:textSize="@dimen/textSize_13" android:textColor="@color/coral_two" android:gravity="center" android:id="@+id/text2" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="You will not be allowed to change it once added." android:layout_below="@+id/text1"/>
            <androidx.appcompat.widget.AppCompatTextView android:textSize="@dimen/textSize_16" android:textColor="@color/white" android:gravity="center" android:id="@+id/yes" android:background="@drawable/complete_round_mgred_fill" android:padding="@dimen/mediumPadding" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="40dp" android:layout_marginTop="@dimen/mediumPadding" android:layout_marginRight="40dp" android:text="Yes" android:layout_below="@+id/text2"/>
            <androidx.appcompat.widget.AppCompatTextView android:textSize="@dimen/textSize_16" android:gravity="center" android:id="@+id/no" android:background="@drawable/complete_round_grey_nofill" android:padding="@dimen/mediumPadding" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="40dp" android:layout_marginTop="10dp" android:layout_marginRight="40dp" android:layout_marginBottom="20dp" android:text="No" android:layout_below="@+id/yes"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
