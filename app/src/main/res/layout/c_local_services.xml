<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white_two" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:id="@+id/freetimeRl" android:paddingLeft="16dp" android:paddingTop="@dimen/normalPadding" android:paddingBottom="@dimen/normalPadding" android:layout_width="match_parent" android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView android:textSize="@dimen/textSize_13" android:textColor="@color/charcoal_grey_50" android:ellipsize="end" android:id="@+id/timeSelected" android:paddingTop="8dp" android:paddingBottom="8dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="100dp" android:text="Free time slots " android:singleLine="true" android:drawableRight="@drawable/ic_arrow_drop_down_grey" android:layout_centerVertical="true" android:textAllCaps="true" android:letterSpacing="0.07"/>
            <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/timeSelectedLayout" android:background="@drawable/button_background_gradient_rounded" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="100dp">
                <androidx.appcompat.widget.AppCompatTextView android:textSize="@dimen/textSize_13" android:textColor="@color/white" android:ellipsize="end" android:gravity="center" android:id="@+id/timeSlotSelected" android:paddingLeft="12dp" android:layout_width="wrap_content" android:layout_height="0dp" android:singleLine="true" android:textAllCaps="true" android:letterSpacing="0.07" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toTopOf="0"/>
                <ImageView android:id="@+id/cleatTimeSlot" android:paddingLeft="15dp" android:paddingTop="5dp" android:paddingRight="5dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toRightOf="@+id/timeSlotSelected" app:layout_constraintTop_toTopOf="0" app:srcCompat="@drawable/ic_clear_white"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.appcompat.widget.AppCompatCheckBox android:textSize="13sp" android:textColor="@color/charcoal_grey_80" android:id="@+id/insideBox" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/mediumPadding" android:checked="false" android:text="INSIDE" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:lineSpacingExtra="8sp"/>
        </RelativeLayout>
        <View android:id="@+id/view" android:background="@color/white_two" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/freetimeRl"/>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/helpListView" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/view"/>
        <include android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/freetimeRl" layout="@layout/search_empty_state_layout"/>
        <include android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/freetimeRl" layout="@layout/layout_zeroscreen"/>
    </RelativeLayout>
    <View android:id="@+id/background" android:background="@color/blakish_transparent" android:visibility="gone" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <include layout="@layout/layout_timesheet_bottom"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
