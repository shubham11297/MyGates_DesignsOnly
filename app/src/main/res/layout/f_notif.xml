<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Base.TextAppearance.AppCompat.Widget.Switch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_background">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/muteParentLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white_two"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="0">

                <TextView
                    android:id="@+id/muteText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:lineSpacingExtra="8sp"
                    android:text="Mute notification sounds"
                    android:textColor="@color/charcoal_grey_80"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="0"
                    app:layout_constraintLeft_toLeftOf="0"
                    app:layout_constraintTop_toTopOf="0" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/muteSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:padding="5dp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/muteText"
                    app:layout_constraintRight_toRightOf="0" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/intercomCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_16"
                android:layout_marginTop="@dimen/padding_16"
                android:layout_marginRight="@dimen/padding_16"
                app:cardCornerRadius="4dp"
                app:cardElevation="3dp"
                app:layout_constraintTop_toBottomOf="@+id/muteParentLayout">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/eintercomParentLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="@dimen/padding_16">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/intercomIcon"
                        android:layout_width="29dp"
                        android:layout_height="29dp"
                        android:layout_marginLeft="@dimen/padding_16"
                        android:layout_marginTop="@dimen/padding_16"
                        app:layout_constraintLeft_toLeftOf="0"
                        app:layout_constraintTop_toTopOf="0"
                        app:srcCompat="0x7f0801f9" />

                    <TextView
                        android:id="@+id/eIntercomText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_16"
                        android:fontFamily="sans-serif-medium"
                        android:lineSpacingExtra="10sp"
                        android:text="e-Intercom "
                        android:textColor="@color/spec_black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/intercomIcon"
                        app:layout_constraintLeft_toRightOf="@+id/intercomIcon"
                        app:layout_constraintTop_toTopOf="@+id/intercomIcon" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/eIntercomSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin8"
                        android:padding="5dp"
                        android:textColor="@color/charcoal_grey_50"
                        android:textOff="OFF"
                        android:textOn="ON"
                        app:layout_constraintBaseline_toBaselineOf="@+id/eIntercomText"
                        app:layout_constraintRight_toRightOf="0"
                        app:switchPadding="@dimen/margin_6" />

                    <TextView
                        android:id="@+id/eIntercomDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="16dp"
                        android:lineSpacingExtra="6sp"
                        android:text="Notification and IVR call when there&apos;s an uninvited visitor at the gate will be stopped."
                        android:textColor="@color/charcoal_grey_30"
                        android:textSize="12sp"
                        app:layout_constraintLeft_toLeftOf="0"
                        app:layout_constraintTop_toBottomOf="@+id/intercomIcon" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/dndCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_16"
                android:layout_marginTop="@dimen/padding_16"
                android:layout_marginRight="@dimen/padding_16"
                android:visibility="gone"
                app:cardCornerRadius="4dp"
                app:cardElevation="3dp"
                app:layout_constraintTop_toBottomOf="@+id/intercomCard">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/padding_16">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/dndIcon"
                        android:layout_width="29dp"
                        android:layout_height="29dp"
                        android:layout_marginLeft="@dimen/padding_16"
                        android:layout_marginTop="@dimen/padding_16"
                        app:layout_constraintLeft_toLeftOf="0"
                        app:layout_constraintTop_toTopOf="0"
                        app:srcCompat="0x7f08019e" />

                    <TextView
                        android:id="@+id/dndText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_16"
                        android:fontFamily="sans-serif-medium"
                        android:lineSpacingExtra="10sp"
                        android:text="Do Not Disturb"
                        android:textColor="@color/spec_black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/dndIcon"
                        app:layout_constraintLeft_toRightOf="@+id/dndIcon"
                        app:layout_constraintTop_toTopOf="@+id/dndIcon" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/dndSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:padding="5dp"
                        android:text="ON"
                        android:textColor="@color/charcoal_grey_50"
                        app:layout_constraintBaseline_toBaselineOf="@+id/dndText"
                        app:layout_constraintRight_toRightOf="0"
                        app:switchPadding="@dimen/margin_6" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/dnd_time_intercal_cl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/dndIcon">

                        <View
                            android:id="@+id/view4"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/padding_16"
                            android:background="@color/white_two"
                            app:layout_constraintTop_toTopOf="0" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/dndCalenderIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/padding_16"
                            android:layout_marginTop="@dimen/padding24"
                            app:layout_constraintLeft_toLeftOf="0"
                            app:layout_constraintTop_toBottomOf="@+id/view4"
                            app:srcCompat="0x7f08015e" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/padding24"
                            android:fontFamily="sans-serif"
                            android:lineSpacingExtra="2sp"
                            android:text="Schedule Time"
                            android:textColor="@color/charcoal_grey_two_90"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            app:layout_constraintBottom_toBottomOf="@+id/dndCalenderIcon"
                            app:layout_constraintLeft_toRightOf="@+id/dndCalenderIcon"
                            app:layout_constraintTop_toTopOf="@+id/dndCalenderIcon" />

                        <TextView
                            android:id="@+id/dnd_time_intercal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/padding_16"
                            android:fontFamily="sans-serif"
                            android:lineSpacingExtra="2sp"
                            android:text="12:00am - 06:00pm"
                            android:textColor="@color/light_red"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            app:layout_constraintBottom_toBottomOf="@+id/dndCalenderIcon"
                            app:layout_constraintRight_toRightOf="0"
                            app:layout_constraintTop_toTopOf="@+id/dndCalenderIcon" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/dndDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="30dp"
                        android:lineSpacingExtra="7sp"
                        android:text="All app notifications will be silenced and IVR calls will be stopped on 9880444126 until scheduled Do Not Disturb ends."
                        android:textColor="@color/charcoal_grey_30"
                        android:textSize="14sp"
                        app:layout_constraintLeft_toLeftOf="0"
                        app:layout_constraintTop_toBottomOf="@+id/dnd_time_intercal_cl" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/entryExitCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_16"
                android:layout_marginTop="@dimen/padding_16"
                android:layout_marginRight="@dimen/padding_16"
                app:cardCornerRadius="4dp"
                app:cardElevation="3dp"
                app:layout_constraintTop_toBottomOf="@+id/dndCard">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/padding_16">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/entryExitIcon"
                        android:layout_width="29dp"
                        android:layout_height="29dp"
                        android:layout_marginLeft="@dimen/padding_16"
                        android:layout_marginTop="@dimen/padding_16"
                        app:layout_constraintLeft_toLeftOf="0"
                        app:layout_constraintTop_toTopOf="0"
                        app:srcCompat="0x7f080291" />

                    <TextView
                        android:id="@+id/entryExitIconText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_16"
                        android:fontFamily="sans-serif-medium"
                        android:lineSpacingExtra="10sp"
                        android:text="Entry/Exit Notifications"
                        android:textColor="@color/spec_black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/entryExitIcon"
                        app:layout_constraintLeft_toRightOf="@+id/entryExitIcon"
                        app:layout_constraintTop_toTopOf="@+id/entryExitIcon" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/entryExitSound"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="@dimen/padding_16"
                        app:layout_constraintBottom_toBottomOf="@+id/entryExitIcon"
                        app:layout_constraintRight_toRightOf="0"
                        app:layout_constraintTop_toTopOf="@+id/entryExitIcon"
                        app:srcCompat="0x7f080222" />

                    <View
                        android:id="@+id/view1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/padding_16"
                        android:background="@color/white_two"
                        app:layout_constraintTop_toBottomOf="@+id/entryExitIcon" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/dailyHelpParentLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        app:layout_constraintTop_toBottomOf="@+id/view1">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/dailyHelpIcon"
                            android:layout_width="29dp"
                            android:layout_height="29dp"
                            android:layout_marginLeft="@dimen/padding_16"
                            android:layout_marginTop="@dimen/padding_16"
                            app:layout_constraintLeft_toLeftOf="0"
                            app:layout_constraintTop_toTopOf="0"
                            app:srcCompat="0x7f08018c" />

                        <TextView
                            android:id="@+id/dailyHelpText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/padding_16"
                            android:fontFamily="sans-serif-medium"
                            android:lineSpacingExtra="10sp"
                            android:text="Daily Helps"
                            android:textColor="@color/spec_black"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/dailyHelpIcon"
                            app:layout_constraintLeft_toRightOf="@+id/dailyHelpIcon"
                            app:layout_constraintTop_toTopOf="@+id/dailyHelpIcon" />

                        <TextView
                            android:id="@+id/dailyHelpDesc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="@dimen/padding_16"
                            android:lineSpacingExtra="7sp"
                            android:text="Maid, Cook, Driver etc."
                            android:textColor="@color/charcoal_grey_30"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="@+id/dailyHelpIcon"
                            app:layout_constraintRight_toRightOf="0"
                            app:layout_constraintTop_toBottomOf="@+id/dailyHelpText"
                            app:layout_constraintTop_toTopOf="@+id/dailyHelpIcon" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/dhEntryIcon"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginTop="@dimen/padding24"
                            app:layout_constraintLeft_toLeftOf="@+id/dailyHelpIcon"
                            app:layout_constraintRight_toRightOf="@+id/dailyHelpIcon"
                            app:layout_constraintTop_toBottomOf="@+id/dailyHelpIcon"
                            app:srcCompat="@drawable/ic_entry_grey" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:lineSpacingExtra="2sp"
                            android:text="Entry Notification"
                            android:textColor="@color/charcoal_grey_70"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            app:layout_constraintBottom_toBottomOf="@+id/dhEntryIcon"
                            app:layout_constraintLeft_toLeftOf="@+id/dailyHelpText"
                            app:layout_constraintTop_toTopOf="@+id/dhEntryIcon" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/dhEntrySwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:padding="5dp"
                            android:textColor="@color/charcoal_grey_50"
                            android:textOff="OFF"
                            android:textOn="ON"
                            app:layout_constraintBottom_toBottomOf="@+id/dhEntryIcon"
                            app:layout_constraintRight_toRightOf="0"
                            app:layout_constraintTop_toTopOf="@+id/dhEntryIcon"
                            app:switchPadding="@dimen/margin_6" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/exitIcon"
                            android:layout_width="21dp"
                            android:layout_height="21dp"
                            android:layout_marginTop="@dimen/padding24"
                            android:layout_marginRight="4dp"
                            app:layout_constraintLeft_toLeftOf="@+id/dailyHelpIcon"
                            app:layout_constraintRight_toRightOf="@+id/dailyHelpIcon"
                            app:layout_constraintTop_toBottomOf="@+id/dhEntryIcon"
                            app:srcCompat="@drawable/ic_action_exit" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:lineSpacingExtra="2sp"
                            android:text="Exit Notification"
                            android:textColor="@color/charcoal_grey_70"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            app:layout_constraintBottom_toBottomOf="@+id/exitIcon"
                            app:layout_constraintLeft_toLeftOf="@+id/dailyHelpText"
                            app:layout_constraintTop_toTopOf="@+id/exitIcon" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/dhExitSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:padding="5dp"
                            android:textColor="@color/charcoal_grey_50"
                            android:textOff="OFF"
                            android:textOn="ON"
                            app:layout_constraintBottom_toBottomOf="@+id/exitIcon"
                            app:layout_constraintRight_toRightOf="0"
                            app:layout_constraintTop_toTopOf="@+id/exitIcon"
                            app:switchPadding="@dimen/margin_6" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/padding_16"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="@dimen/padding_16"
                        android:background="@color/white_two"
                        app:layout_constraintTop_toBottomOf="@+id/dailyHelpParentLayout" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/guestParentLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        app:layout_constraintTop_toBottomOf="@+id/view2">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/guestIcon"
                            android:layout_width="29dp"
                            android:layout_height="29dp"
                            android:layout_marginLeft="@dimen/padding_16"
                            android:layout_marginTop="@dimen/padding_16"
                            app:layout_constraintLeft_toLeftOf="0"
                            app:layout_constraintTop_toTopOf="0"
                            app:srcCompat="0x7f0802c0" />

                        <TextView
                            android:id="@+id/guestText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/padding_16"
                            android:fontFamily="sans-serif-medium"
                            android:lineSpacingExtra="10sp"
                            android:text="Your Guests"
                            android:textColor="@color/spec_black"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/guestIcon"
                            app:layout_constraintLeft_toRightOf="@+id/guestIcon"
                            app:layout_constraintTop_toTopOf="@+id/guestIcon" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/guestEntryIcon"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginTop="@dimen/padding24"
                            app:layout_constraintLeft_toLeftOf="@+id/guestIcon"
                            app:layout_constraintRight_toRightOf="@+id/guestIcon"
                            app:layout_constraintTop_toBottomOf="@+id/guestIcon"
                            app:srcCompat="@drawable/ic_entry_grey" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:lineSpacingExtra="2sp"
                            android:text="Notify on Entry"
                            android:textColor="@color/charcoal_grey_70"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            app:layout_constraintBottom_toBottomOf="@+id/guestEntryIcon"
                            app:layout_constraintLeft_toLeftOf="@+id/guestText"
                            app:layout_constraintTop_toTopOf="@+id/guestEntryIcon" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/guestEntrySwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:padding="5dp"
                            android:textColor="@color/charcoal_grey_50"
                            android:textOff="OFF"
                            android:textOn="ON"
                            app:layout_constraintBottom_toBottomOf="@+id/guestEntryIcon"
                            app:layout_constraintRight_toRightOf="0"
                            app:layout_constraintTop_toTopOf="@+id/guestEntryIcon"
                            app:switchPadding="@dimen/margin_6" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/guestExitIcon"
                            android:layout_width="21dp"
                            android:layout_height="21dp"
                            android:layout_marginTop="@dimen/padding24"
                            android:layout_marginRight="4dp"
                            app:layout_constraintLeft_toLeftOf="@+id/guestIcon"
                            app:layout_constraintRight_toRightOf="@+id/guestIcon"
                            app:layout_constraintTop_toBottomOf="@+id/guestEntryIcon"
                            app:srcCompat="@drawable/ic_action_exit" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:lineSpacingExtra="2sp"
                            android:text="Notify on Exit"
                            android:textColor="@color/charcoal_grey_70"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            app:layout_constraintBottom_toBottomOf="@+id/guestExitIcon"
                            app:layout_constraintLeft_toLeftOf="@+id/guestText"
                            app:layout_constraintTop_toTopOf="@+id/guestExitIcon" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/guestExitSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:padding="5dp"
                            android:textColor="@color/charcoal_grey_50"
                            android:textOff="OFF"
                            android:textOn="ON"
                            app:layout_constraintBottom_toBottomOf="@+id/guestExitIcon"
                            app:layout_constraintRight_toRightOf="0"
                            app:layout_constraintTop_toTopOf="@+id/guestExitIcon"
                            app:switchPadding="6dp" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:id="@+id/view3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/padding_16"
                        android:layout_marginTop="@dimen/padding_16"
                        android:layout_marginRight="@dimen/padding_16"
                        android:background="@color/white_two"
                        app:layout_constraintTop_toBottomOf="@+id/guestParentLayout" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/deliveryParentLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        app:layout_constraintTop_toBottomOf="@+id/view3">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/deliveryIcon"
                            android:layout_width="29dp"
                            android:layout_height="29dp"
                            android:layout_marginLeft="@dimen/padding_16"
                            android:layout_marginTop="@dimen/padding_16"
                            app:layout_constraintLeft_toLeftOf="0"
                            app:layout_constraintTop_toTopOf="0"
                            app:srcCompat="0x7f080198" />

                        <TextView
                            android:id="@+id/deliveryText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/padding_16"
                            android:fontFamily="sans-serif-medium"
                            android:lineSpacingExtra="10sp"
                            android:text="Delivery, Cabs and others"
                            android:textColor="@color/spec_black"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/deliveryIcon"
                            app:layout_constraintLeft_toRightOf="@+id/deliveryIcon"
                            app:layout_constraintTop_toTopOf="@+id/deliveryIcon" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/deliveryEntryIcon"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginTop="@dimen/padding24"
                            app:layout_constraintLeft_toLeftOf="@+id/deliveryIcon"
                            app:layout_constraintRight_toRightOf="@+id/deliveryIcon"
                            app:layout_constraintTop_toBottomOf="@+id/deliveryIcon"
                            app:srcCompat="@drawable/ic_entry_grey" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:lineSpacingExtra="2sp"
                            android:text="Notify on Entry"
                            android:textColor="@color/charcoal_grey_70"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            app:layout_constraintBottom_toBottomOf="@+id/deliveryEntryIcon"
                            app:layout_constraintLeft_toLeftOf="@+id/deliveryText"
                            app:layout_constraintTop_toTopOf="@+id/deliveryEntryIcon" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/deliveryEntrySwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:padding="5dp"
                            android:textColor="@color/charcoal_grey_50"
                            android:textOff="OFF"
                            android:textOn="ON"
                            app:layout_constraintBottom_toBottomOf="@+id/deliveryEntryIcon"
                            app:layout_constraintRight_toRightOf="0"
                            app:layout_constraintTop_toTopOf="@+id/deliveryEntryIcon"
                            app:switchPadding="6dp" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/deliveryExitIcon"
                            android:layout_width="21dp"
                            android:layout_height="21dp"
                            android:layout_marginTop="@dimen/padding24"
                            android:layout_marginRight="4dp"
                            app:layout_constraintLeft_toLeftOf="@+id/deliveryIcon"
                            app:layout_constraintRight_toRightOf="@+id/deliveryIcon"
                            app:layout_constraintTop_toBottomOf="@+id/deliveryEntryIcon"
                            app:srcCompat="@drawable/ic_action_exit" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:lineSpacingExtra="2sp"
                            android:text="Notify on Exit"
                            android:textColor="@color/charcoal_grey_70"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            app:layout_constraintBottom_toBottomOf="@+id/deliveryExitIcon"
                            app:layout_constraintLeft_toLeftOf="@+id/deliveryText"
                            app:layout_constraintTop_toTopOf="@+id/deliveryExitIcon" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/deliveryExitSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:padding="5dp"
                            android:textColor="@color/charcoal_grey_50"
                            android:textOff="OFF"
                            android:textOn="ON"
                            app:layout_constraintBottom_toBottomOf="@+id/deliveryExitIcon"
                            app:layout_constraintRight_toRightOf="0"
                            app:layout_constraintTop_toTopOf="@+id/deliveryExitIcon"
                            app:switchPadding="6dp" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/erpCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_16"
                android:layout_marginTop="@dimen/padding_16"
                android:layout_marginRight="@dimen/padding_16"
                app:cardCornerRadius="4dp"
                app:cardElevation="3dp"
                app:layout_constraintTop_toBottomOf="@+id/entryExitCard">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/erpParentLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingLeft="16dp"
                    android:paddingRight="@dimen/padding_16">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/erpRv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="0" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/appSettingView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="25dp"
                android:lineSpacingExtra="6sp"
                android:text="@string/enableNotification"
                android:textColor="@color/charcoal_grey"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="0"
                app:layout_constraintTop_toBottomOf="@+id/erpCard" />

            <TextView
                android:id="@+id/faqView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="@dimen/padding24"
                android:gravity="center"
                android:lineSpacingExtra="6sp"
                android:padding="5dp"
                android:paddingBottom="25dp"
                android:text="@string/device_specific_help_check"
                android:textColor="@color/charcoal_grey"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="0"
                app:layout_constraintLeft_toLeftOf="0"
                app:layout_constraintTop_toBottomOf="@+id/appSettingView"
                app:layout_constraintVertical_bias="0" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
