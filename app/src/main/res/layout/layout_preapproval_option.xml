<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#63636f"
        android:id="@+id/labelOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAllCaps="true"
        android:letterSpacing="0.07"
        app:layout_constraintLeft_toLeftOf="0"
        app:layout_constraintRight_toRightOf="0"
        app:layout_constraintTop_toTopOf="0" />

    <View
        android:id="@+id/divider1"
        android:background="@color/white_two"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/labelOption" />

    <TextView
        android:textSize="18sp"
        android:textColor="@color/charcoal_grey"
        android:gravity="center_vertical"
        android:id="@+id/allowOnceLabel"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Allow Once"
        android:lineSpacingExtra="9sp"
        app:layout_constraintLeft_toLeftOf="0"
        app:layout_constraintTop_toBottomOf="@+id/divider1" />

    <View
        android:id="@+id/divider2"
        android:background="@color/white_two"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/allowOnceLabel" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/allowFrequentCL"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/divider2">

        <TextView
            android:textSize="18sp"
            android:textColor="@color/charcoal_grey"
            android:id="@+id/allowRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Allow Frequently"
            android:lineSpacingExtra="9sp"
            app:layout_constraintBottom_toBottomOf="0"
            app:layout_constraintLeft_toLeftOf="0"
            app:layout_constraintTop_toTopOf="0" />

        <TextView
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:background="@drawable/round_red"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:paddingRight="10dp"
            android:paddingBottom="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="NEW"
            android:letterSpacing="0.13"
            app:layout_constraintBottom_toBottomOf="0"
            app:layout_constraintLeft_toRightOf="@+id/allowRegular"
            app:layout_constraintTop_toTopOf="0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
