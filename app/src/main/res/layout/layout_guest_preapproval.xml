<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/optionsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="0">

        <TextView
            android:textSize="18sp"
            android:textColor="@color/charcoal_grey_80"
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:text="@string/allow_cab_label"
            android:lineSpacingExtra="9sp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="0"
            app:layout_constraintStart_toStartOf="0"
            app:layout_constraintTop_toTopOf="0" />

        <TextView
            android:textSize="15sp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/advanceOptions"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="@string/advanced_options"
            app:layout_constraintLeft_toLeftOf="0"
            app:layout_constraintRight_toRightOf="0"
            app:layout_constraintTop_toBottomOf="@+id/textView22" />

        <TextView
            android:textSize="16sp"
            android:textColor="@color/charcoal_grey_80"
            android:id="@+id/label1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:text="Select Date"
            android:lineSpacingExtra="12sp"
            android:layout_marginStart="30dp"
            app:layout_constraintLeft_toLeftOf="0"
            app:layout_constraintTop_toTopOf="0" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dateSelectionCL"
            android:background="@drawable/rounded_light_red_no_fill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            app:layout_constraintEnd_toEndOf="0"
            app:layout_constraintStart_toStartOf="0"
            app:layout_constraintTop_toBottomOf="@+id/label1">

            <TextView
                android:textSize="15sp"
                android:textColor="@color/light_red"
                android:id="@+id/dateCLText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Today"
                android:lineSpacingExtra="9sp"
                app:layout_constraintBottom_toBottomOf="0"
                app:layout_constraintStart_toStartOf="0"
                app:layout_constraintTop_toTopOf="0" />

            <ImageView
                android:id="@+id/dateCLImage"
                android:layout_width="12dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/dateCLText"
                app:layout_constraintRight_toRightOf="0"
                app:layout_constraintTop_toTopOf="@+id/dateCLText"
                app:srcCompat="@drawable/ic_triangle_red" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/startTimeSelectionCLPar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="0"
            app:layout_constraintTop_toBottomOf="@+id/dateSelectionCL">

            <TextView
                android:textSize="16sp"
                android:textColor="@color/charcoal_grey_80"
                android:id="@+id/label21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Time"
                android:lineSpacingExtra="12sp"
                app:layout_constraintLeft_toLeftOf="0"
                app:layout_constraintTop_toTopOf="0" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/startTimeSelectionCL1"
                android:background="@drawable/rounded_light_red_no_fill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toLeftOf="0"
                app:layout_constraintRight_toRightOf="0"
                app:layout_constraintTop_toBottomOf="@+id/label21">

                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/light_red"
                    android:id="@+id/startTimeCLText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:lineSpacingExtra="6sp"
                    app:layout_constraintBottom_toBottomOf="0"
                    app:layout_constraintHorizontal_chainStyle="0"
                    app:layout_constraintRight_toLeftOf="@+id/startTimeImage1"
                    app:layout_constraintStart_toStartOf="0"
                    app:layout_constraintTop_toTopOf="0" />

                <ImageView
                    android:id="@+id/startTimeImage1"
                    android:layout_width="12dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    app:layout_constraintBottom_toBottomOf="@+id/startTimeCLText1"
                    app:layout_constraintLeft_toRightOf="@+id/startTimeCLText1"
                    app:layout_constraintRight_toRightOf="0"
                    app:layout_constraintTop_toTopOf="@+id/startTimeCLText1"
                    app:srcCompat="@drawable/ic_triangle_red" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/endTimeSelectionCLPar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toRightOf="@+id/startTimeSelectionCLPar1"
            app:layout_constraintTop_toBottomOf="@+id/dateSelectionCL">

            <TextView
                android:textSize="16sp"
                android:textColor="@color/charcoal_grey_80"
                android:id="@+id/label31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Valid for Next"
                android:lineSpacingExtra="12sp"
                app:layout_constraintLeft_toLeftOf="0"
                app:layout_constraintTop_toTopOf="0" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/endTimeSelectionCL1"
                android:background="@drawable/rounded_light_red_no_fill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toLeftOf="0"
                app:layout_constraintRight_toRightOf="0"
                app:layout_constraintTop_toBottomOf="@+id/label31">

                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/light_red"
                    android:id="@+id/endTimeCLText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:lineSpacingExtra="6sp"
                    app:layout_constraintBottom_toBottomOf="0"
                    app:layout_constraintHorizontal_chainStyle="0"
                    app:layout_constraintRight_toLeftOf="@+id/endTimeImage1"
                    app:layout_constraintStart_toStartOf="0"
                    app:layout_constraintTop_toTopOf="0" />

                <ImageView
                    android:id="@+id/endTimeImage1"
                    android:layout_width="12dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    app:layout_constraintBottom_toBottomOf="@+id/endTimeCLText1"
                    app:layout_constraintLeft_toRightOf="@+id/endTimeCLText1"
                    app:layout_constraintRight_toRightOf="0"
                    app:layout_constraintTop_toTopOf="@+id/endTimeCLText1"
                    app:srcCompat="@drawable/ic_triangle_red" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/startTimeSelectionCLPar"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="0"
            app:layout_constraintTop_toBottomOf="@+id/textView22">

            <TextView
                android:textSize="16sp"
                android:textColor="@color/charcoal_grey_80"
                android:id="@+id/label2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Date"
                android:lineSpacingExtra="12sp"
                app:layout_constraintLeft_toLeftOf="0"
                app:layout_constraintTop_toTopOf="0" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/startTimeSelectionCL"
                android:background="@drawable/rounded_light_red_no_fill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toLeftOf="0"
                app:layout_constraintRight_toRightOf="0"
                app:layout_constraintTop_toBottomOf="@+id/label2">

                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/light_red"
                    android:id="@+id/startTimeCLText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:lineSpacingExtra="6sp"
                    app:layout_constraintBottom_toBottomOf="0"
                    app:layout_constraintHorizontal_chainStyle="0"
                    app:layout_constraintRight_toLeftOf="@+id/startTimeImage"
                    app:layout_constraintStart_toStartOf="0"
                    app:layout_constraintTop_toTopOf="0" />

                <ImageView
                    android:id="@+id/startTimeImage"
                    android:layout_width="12dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    app:layout_constraintBottom_toBottomOf="@+id/startTimeCLText"
                    app:layout_constraintLeft_toRightOf="@+id/startTimeCLText"
                    app:layout_constraintRight_toRightOf="0"
                    app:layout_constraintTop_toTopOf="@+id/startTimeCLText"
                    app:srcCompat="@drawable/ic_triangle_red" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/endTimeSelectionCLPar"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toRightOf="@+id/startTimeSelectionCLPar"
            app:layout_constraintTop_toBottomOf="@+id/textView22">

            <TextView
                android:textSize="16sp"
                android:textColor="@color/charcoal_grey_80"
                android:id="@+id/label3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End Date"
                android:lineSpacingExtra="12sp"
                app:layout_constraintLeft_toLeftOf="0"
                app:layout_constraintTop_toTopOf="0" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/endTimeSelectionCL"
                android:background="@drawable/rounded_light_red_no_fill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toLeftOf="0"
                app:layout_constraintRight_toRightOf="0"
                app:layout_constraintTop_toBottomOf="@+id/label3">

                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/light_red"
                    android:id="@+id/endTimeCLText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:lineSpacingExtra="6sp"
                    app:layout_constraintBottom_toBottomOf="0"
                    app:layout_constraintHorizontal_chainStyle="0"
                    app:layout_constraintRight_toLeftOf="@+id/endTimeImage"
                    app:layout_constraintStart_toStartOf="0"
                    app:layout_constraintTop_toTopOf="0" />

                <ImageView
                    android:id="@+id/endTimeImage"
                    android:layout_width="12dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    app:layout_constraintBottom_toBottomOf="@+id/endTimeCLText"
                    app:layout_constraintLeft_toRightOf="@+id/endTimeCLText"
                    app:layout_constraintRight_toRightOf="0"
                    app:layout_constraintTop_toTopOf="@+id/endTimeCLText"
                    app:srcCompat="@drawable/ic_triangle_red" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/charcoal_grey_30"
        android:id="@+id/textview12"
        android:paddingTop="@dimen/padding_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="8dp"
        android:text="SELECT GUEST FROM"
        android:layout_marginStart="30dp"
        app:layout_constraintLeft_toLeftOf="0"
        app:layout_constraintTop_toBottomOf="@+id/optionsLayout" />

    <View
        android:id="@+id/view1"
        android:background="@color/white_two"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textview12" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/phoneContactsCL"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="0"
        app:layout_constraintTop_toBottomOf="@+id/view1">

        <TextView
            android:textSize="20sp"
            android:textColor="@color/charcoal_grey_80"
            android:id="@+id/textViewPhoneContacts"
            android:paddingTop="@dimen/padding_16"
            android:paddingBottom="@dimen/padding_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Phone Contacts"
            android:layout_marginStart="30dp"
            app:layout_constraintLeft_toLeftOf="0"
            app:layout_constraintTop_toTopOf="0" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="30dp"
            app:layout_constraintBottom_toBottomOf="0"
            app:layout_constraintRight_toRightOf="0"
            app:layout_constraintTop_toTopOf="0"
            app:srcCompat="@drawable/ic_next" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view2"
        android:background="@color/white_two"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toBottomOf="@+id/phoneContactsCL" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/recentlyInvitedCL"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="0"
        app:layout_constraintTop_toBottomOf="@+id/view2">

        <TextView
            android:textSize="20sp"
            android:textColor="@color/charcoal_grey_80"
            android:id="@+id/textViewRecents"
            android:paddingTop="@dimen/padding_16"
            android:paddingBottom="@dimen/padding_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Recently Invited"
            android:layout_marginStart="30dp"
            app:layout_constraintLeft_toLeftOf="0"
            app:layout_constraintTop_toTopOf="0" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="30dp"
            app:layout_constraintBottom_toBottomOf="0"
            app:layout_constraintRight_toRightOf="0"
            app:layout_constraintTop_toTopOf="0"
            app:srcCompat="@drawable/ic_next" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view3"
        android:background="@color/white_two"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toBottomOf="@+id/recentlyInvitedCL" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/enterManuallyCL"
        android:background="@drawable/white_fill_round_leftandright_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="0"
        app:layout_constraintTop_toBottomOf="@+id/view3">

        <TextView
            android:textSize="20sp"
            android:textColor="@color/charcoal_grey_80"
            android:id="@+id/textViewManual"
            android:paddingTop="@dimen/padding_16"
            android:paddingBottom="@dimen/padding_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Enter Manually"
            android:layout_marginStart="30dp"
            app:layout_constraintLeft_toLeftOf="0"
            app:layout_constraintTop_toTopOf="0" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="30dp"
            app:layout_constraintBottom_toBottomOf="0"
            app:layout_constraintRight_toRightOf="0"
            app:layout_constraintTop_toTopOf="0"
            app:srcCompat="@drawable/ic_next" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/privacyMessageLayout"
        android:paddingBottom="10dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/enterManuallyCL">

        <View
            android:background="@color/white_two"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_constraintTop_toTopOf="0" />

        <ImageView
            android:id="@+id/privacyInfoIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="11dp"
            app:layout_constraintLeft_toLeftOf="0"
            app:layout_constraintTop_toTopOf="0"
            app:srcCompat="@drawable/ic_info_blue" />

        <TextView
            android:textSize="14sp"
            android:textColor="@color/cool_blue"
            android:id="@+id/privacyMessageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="15dp"
            android:text="For the privacy of your guests, we require only name and not the mobile number"
            android:lineSpacingExtra="7sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toRightOf="@+id/privacyInfoIcon"
            app:layout_constraintRight_toRightOf="0"
            app:layout_constraintTop_toTopOf="0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
