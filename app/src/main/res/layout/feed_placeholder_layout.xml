<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/feed_margin_side"
    android:layout_marginRight="@dimen/feed_margin_side"
    android:background="@drawable/card_back"
    app:cardCornerRadius="6dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardBackgroundView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_border_white_fill">

        <ImageView
            android:id="@+id/img"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_charcoal30_back"
            app:layout_constraintLeft_toLeftOf="0"
            app:layout_constraintTop_toTopOf="0" />

        <View
            android:id="@+id/titleLayout"
            android:layout_width="180dp"
            android:layout_height="16dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/rec_rounded_charcoal30_light_back"
            app:layout_constraintLeft_toRightOf="@+id/img"
            app:layout_constraintTop_toTopOf="0" />

        <View
            android:id="@+id/statusLayoutParent"
            android:layout_width="150dp"
            android:layout_height="16dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rec_rounded_charcoal30_back"
            app:layout_constraintLeft_toRightOf="@+id/img"
            app:layout_constraintStart_toEndOf="@+id/img"
            app:layout_constraintTop_toBottomOf="@+id/titleLayout" />

        <ImageView
            android:id="@+id/imageView30"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_charcoal30_light_back"
            app:layout_constraintLeft_toLeftOf="0"
            app:layout_constraintTop_toBottomOf="@+id/statusLayoutParent" />

        <View
            android:id="@+id/desc1"
            android:layout_width="230dp"
            android:layout_height="15dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/rec_rounded_charcoal30_light_back"
            app:layout_constraintLeft_toRightOf="@+id/imageView30"
            app:layout_constraintTop_toTopOf="@+id/imageView30" />

        <ImageView
            android:id="@+id/imageView40"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_charcoal30_light_back"
            app:layout_constraintLeft_toLeftOf="0"
            app:layout_constraintTop_toBottomOf="@+id/imageView30" />

        <View
            android:id="@+id/desc2"
            android:layout_width="180dp"
            android:layout_height="15dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/rec_rounded_charcoal30_light_back"
            app:layout_constraintLeft_toRightOf="@+id/imageView40"
            app:layout_constraintTop_toTopOf="@+id/imageView40" />

        <View
            android:id="@+id/view10"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="22dp"
            android:background="@color/white_two"
            app:layout_constraintTop_toBottomOf="@+id/desc2" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="0"
            app:layout_constraintStart_toStartOf="0"
            app:layout_constraintTop_toBottomOf="@+id/view10"
            app:layout_constraintWidth_percent="0.5">

            <ImageView
                android:id="@+id/imageView50"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/rounded_charcoal30_back"
                app:layout_constraintBottom_toBottomOf="0"
                app:layout_constraintHorizontal_chainStyle="2"
                app:layout_constraintLeft_toLeftOf="0"
                app:layout_constraintRight_toLeftOf="@+id/desc3"
                app:layout_constraintTop_toTopOf="0" />

            <View
                android:id="@+id/desc3"
                android:layout_width="80dp"
                android:layout_height="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/rec_rounded_charcoal30_light_back"
                app:layout_constraintBottom_toBottomOf="0"
                app:layout_constraintLeft_toRightOf="@+id/imageView50"
                app:layout_constraintRight_toRightOf="0"
                app:layout_constraintTop_toTopOf="0" />

            <View
                android:id="@+id/view"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="@color/white_two"
                app:layout_constraintEnd_toEndOf="0" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="0"
            app:layout_constraintLeft_toRightOf="@+id/cl1"
            app:layout_constraintTop_toBottomOf="@+id/view10"
            app:layout_constraintWidth_percent="0.5">

            <ImageView
                android:id="@+id/imageView60"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/rounded_charcoal30_back"
                app:layout_constraintBottom_toBottomOf="0"
                app:layout_constraintHorizontal_chainStyle="2"
                app:layout_constraintLeft_toLeftOf="0"
                app:layout_constraintRight_toLeftOf="@+id/desc4"
                app:layout_constraintTop_toTopOf="0" />

            <View
                android:id="@+id/desc4"
                android:layout_width="80dp"
                android:layout_height="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/rec_rounded_charcoal30_light_back"
                app:layout_constraintBottom_toBottomOf="0"
                app:layout_constraintLeft_toRightOf="@+id/imageView60"
                app:layout_constraintRight_toRightOf="0"
                app:layout_constraintTop_toTopOf="0" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
